<%- include('./partials/head.ejs')  %> 

<body>
   
    <section>
        <h3>Create User:</h3>
        <form action="/register" method='POST' enctype="multipart/form-data">
            <div class="row g-3 container_name_surname_register">
                <div class="col">
                  <input type="text" class="form-control" placeholder="Nombre" aria-label="Nombre" name="name">
                </div>
                <div class="col">
                  <input type="text" class="form-control" placeholder="Surname" aria-label="Apellido" name="surname">
                </div>
            </div>
            <div class="row g-3 container_email_pass_register">
                <div class="col">
                  <input type="text" class="form-control" placeholder="Email" name="email">
                </div>
                <div class="col">
                  <input type="text" class="form-control" placeholder="Password" name="password">
                </div>
            </div>
            <div class="input-group">
                <input type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" name="avatar">
            </div>
            <input type="submit">  
        </form>
    </section>
    <div>
        <% if(typeof validaciones != 'undefined'){ %>
            <% validaciones.forEach( (validacion) => { %>
                <p style="color: red;">
                <%= validacion.msg %> 
            </p>
            <% }) %> 
        <% } %> 
    </div> 
</body>

<%- include('./partials/footer.ejs')  %> 

<style>
    * {
        text-align: center;
    }
    section {
        margin: 50px;
    }
</style>

